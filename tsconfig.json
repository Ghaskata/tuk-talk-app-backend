{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",                                 
    "module": "commonjs",                                
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": false,
    "allowJs": true,
    "skipLibCheck": true,  
    "rootDir": "./",
    "outDir": "./dist",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
